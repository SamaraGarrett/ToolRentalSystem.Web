@model ToolRentalSystem.Web.Models.Database.Rental

@{
    ViewBag.Title = "Return Tool";
}

<h2>Return Tool</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        <label asp-for="RentalId" class="control-label">Rental ID</label>
        <div>@Html.DisplayFor(model => model.RentalId)</div>
    </div>

