        <label asp-for="UserId" class="control-label">User ID</label>
        <div>@Html.DisplayFor(model => model.UserId)</div>
    </div>

    <div class="form-group">
        <label asp-for="StartDate" class="control-label">Start Date</label>
        <div>@Model.StartDate.Value.ToString("d")</div>
    </div>

    <div class="form-group">
        <label asp-for="DueDate" class="control-label">Due Date</label>
        <div>@Model.DueDate.Value.ToString("d")</div>
    </div>

    <div class="form-group">
        <label asp-for="RentalStatus" class="control-label"></label>
        <div>@Html.EditorFor(model => model.RentalStatus)</div>
    </div>

