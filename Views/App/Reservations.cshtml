<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />  <!-- -->
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>  <!-- -->
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>  <!-- -->


@{
    ViewBag.Title = "Reservations";
}

<h3>Reservations</h3>

<br />
<table id="reservation_table" class="table table-striped table-bordered dt-responsive nowrap">
    <thead>
        <tr>
            <th>Rental ID</th>
            <th>User ID</th>
            <th>Tool ID</th>
            <th>Start Date</th>
            <th>Due Date</th>
            <th>Rental Status</th>
            <th></th>
            <th></th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.RentalId</td>
                <td>@item.AspNetUserId</td>
                <td>@item.ToolId</td>
                <td>@item.StartDate</td>
                <td>@item.DueDate</td>
                <td>@item.RentalStatus</td>
                <td><a asp-action="RentOutTool" asp-route-rentalid="@item.RentalId">Rent Out</a></td>
                <td><a asp-action="CancelReservation" asp-route-rentalid="@item.RentalId">Cancel Reservation</a></td>
             </tr>
        }
    </tbody>
</table>

<script type="text/javascript" class="init"> 
    // jquery script to initialize datatable structure
    $("#reservation_table").DataTable();
</script>